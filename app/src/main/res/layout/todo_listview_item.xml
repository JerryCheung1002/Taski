<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@drawable/shape"
        >
        <com.rey.material.widget.CheckBox
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_state"
            android:layout_alignParentRight="true"
            android:focusable="false"
            app:cbd_strokeColor="#448AFF"
            android:layout_marginRight="7sp"
            android:layout_marginTop="7sp"
            app:cbd_animDuration="0"/>

        <TextView android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/list_state"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:paddingLeft="7dp"
            />

        <TextView android:id="@+id/list_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_title"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/list_state"
            android:textSize="15sp"
            android:background="#00000000"
            android:paddingLeft="7dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/list_desc">

        <TextView android:id="@+id/list_type"

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:paddingLeft="7dp"
            />
        <TextView android:id="@+id/list_date"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:paddingRight="10dp"
            android:gravity="right"
            android:textAlignment="gravity"
            />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@android:color/transparent"
        android:layout_height="10dp">
    </LinearLayout>
</LinearLayout>